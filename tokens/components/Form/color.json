{
  "color": {
    "form": {
      "input": {
        "base": { "value": "{color.body.base.value}", "source": "$input-color" },
        "bg": {
          "base": { "value": "{color.white.value}", "source": "$input-bg" }
        },
        "focus": {
          "border": { "value": "{color.body.base.value}", "source": "$input-focus-border-color" },
          "bg": { "value": "{color.white.value}", "source": "$input-focus-bg" }
        }
      }
    }
  }
}
