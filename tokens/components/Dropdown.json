{
  "size": {
    "dropdown": {
      "border": {
        "width": { "value": "0", "source": "$dropdown-border-width" }
      }
    }
  },
  "spacing": {
    "dropdown": {
      "padding": {
        "y": {
          "base": { "value": ".5rem", "source": "$dropdown-padding-y" },
          "item": { "value": ".625rem", "source": "$dropdown-item-padding-y" }
        }
      }
    }
  },
  "elevation": {
    "dropdown": {
      "box-shadow": { "value": "{elevation.box-shadow.level.2.value}", "source": "$dropdown-box-shadow" }
    }
  }
}
