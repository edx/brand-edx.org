{
  "color": {
    "btn": {
      "active": {
        "bg": {
          "inverse-outline-dark": { "value": "{color.white.value}" }
        },
        "text": {
          "inverse-outline-dark": { "value": "{color.primary.base.value}", "modify": null }
        }
      },
      "border": {
        "outline-dark": { "value": "{color.light.300.value}" }
      },
      "hover": {
        "text": {
          "outline-dark": { "value": "{color.white.value}" }
        },
        "bg": {
          "outline-dark": { "value": "{color.dark.base.value}" }
        }
      },
      "focus": {
        "text": {
          "inverse-dark": { "value": "{color.dark.base.value}" },
          "outline-dark": { "value": "{color.white.value}" }
        },
        "bg": {
          "dark": { "value": "{color.dark.base.value}" },
          "outline-dark": { "value": "{color.btn.hover.bg.outline-dark.value}" },
          "inverse-dark": { "value": "{color.white.value}" }
        },
        "border": {
          "outline-dark": { "value": "{color.btn.focus.bg.outline-dark.value}" }
        }
      },
      "disabled": {
        "text": {
          "outline-dark": { "value": "{color.primary.500.value}" }
        },
        "bg": {
          "outline-dark": { "value": "{color.white.value}" }
        },
        "border": {
          "outline-dark": { "value": "{color.light.300.value}" },
          "inverse-dark": { "value": "transparent" },
          "inverse-outline-dark": { "value": "{color.light.300.value}" }
        }
      }
    }
  }
}
