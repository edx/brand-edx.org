{
  "link": {
    "color": { "value": "{color.info.base.value}", "themeable": true, "source": "$link-color" },
    "decoration": { "value": "none", "themeable": true, "source": "$link-decoration" },
    "hover": {
      "color": { "value": "{color.info.700.value}", "themeable": true, "source": "$link-hover-color" },
      "decoration": { "value": "underline", "themeable": true, "source": "$link-hover-decoration" }
    },
    "emphasized": {
      "hover": {
        "darken": {
          "percentage": { "value": "15%", "themeable": true, "source": "$emphasized-link-hover-darken-percentage" }
        }
      }
    }
  }
}
